  <script>
    const projectCards = document.getElementById('projectCards');

    // Auto-pause on hover
    projectCards.addEventListener('mouseenter', () => {
      projectCards.classList.add('pause-scroll');
    });

    projectCards.addEventListener('mouseleave', () => {
      projectCards.classList.remove('pause-scroll');
    });

    // Auto-pause on touch or scroll
    let pauseTimeout;
    ['scroll', 'touchstart'].forEach(evt => {
      window.addEventListener(evt, () => {
        projectCards.classList.add('pause-scroll');
        clearTimeout(pauseTimeout);
        pauseTimeout = setTimeout(() => {
          projectCards.classList.remove('pause-scroll');
        }, 2000);
      });
    });
  </script>
