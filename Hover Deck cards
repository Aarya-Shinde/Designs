<script>
  // Auto-scroll animation for timeline
  const scrollContainer = document.querySelector('.timeline-cards');
  let scrollAmount = 0;
  let direction = 1;

  setInterval(() => {
    if (!scrollContainer) return;

    const maxScroll = scrollContainer.scrollWidth - scrollContainer.clientWidth;

    scrollAmount += 1 * direction;
    if (scrollAmount >= maxScroll || scrollAmount <= 0) {
      direction *= -1;
    }

    scrollContainer.scrollTo({
      left: scrollAmount,
      behavior: 'smooth'
    });
  }, 30); // speed of scroll (lower is faster)
</script>

